{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "noImplicitThis": false,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ESNext",
            "dom"
        ],
        "paths": {
            "@/*": [
                "./*",
            ],
        }
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
    }
}